<% provide(:title, "Game-Add") %>


<% if @game.errors.any? %>
<div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
</div>
<% end %>

<div style="margin-top: 10px;">
	<div class="panel panel-default">
	  <!-- Default panel contents -->
	  <div class="panel-heading">New Game</div>
	  </div>
	  <div style="margin-top: 10px;" >
	  <!-- Table -->
		<%= form_for(@game) do |f| %>
		<div class='form-group'>
			<div class="col-sm-2">
		    	<%= f.label :name,'Game Name:'%>
			</div>
		    <div class="col-sm-10">
		    	<%= f.text_field :name,  class: 'form-control'%>
			</div>
		</div>

		<div style="margin-top: 10px;" />
		<div class='form-group'>
			<div class="col-sm-2">
		    	<%= f.label :game_password,'Game Password:'%>
			</div>
		    <div class="col-sm-10">
		    	<%= f.password_field :game_password,  class: 'form-control'%>
		    </div>
		</div>
		<div style="margin-top: 10px;" />
		<div class='form-group'>
			<div class="col-sm-2">
		    	<%= f.label :map,'Game Map:'%>
			</div>
		    <div class="col-sm-10">
		    	<%= f.file_field :map,  class: 'form-control'%>
		    </div>
		</div>
		<div style="margin-top: 10px;" />
		<div class='form-group'>
			<div class="col-sm-2">
		    	<%= f.label :game_history,'Game History:'%>
			</div>
		    <div class="col-sm-10">
		    	<%= f.text_area :game_history, :size=>"50x10", class: 'form-control'%>
		    </div>
		</div>
		<div style="margin-top: 10px;" />
		<div class="form-group">
	    	<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Create Game" %>&nbsp;<%= button_tag "Reset", type: :reset %>
			</div>

		</div>
		<% end %>
	</div>	
	</div>

<div class="col-sm-11">
	<%= link_to "Go to User Home page",user_path(current_user) %>
</div>